{
  "openapi": "3.0.1",
  "info": {
    "title": "RestApiTask",
    "version": "1.0"
  },
  "paths": {
    "/api/submitapirequest": {
      "post": {
        "tags": [
          "RestApi"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RestApiRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RestApiRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RestApiRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ItemDetail": {
        "required": [
          "name",
          "partnerItemRef"
        ],
        "type": "object",
        "properties": {
          "partnerItemRef": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "qty": {
            "maximum": 5,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "unitPrice": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "RestApiRequest": {
        "required": [
          "partnerKey",
          "partnerPassword",
          "partnerRefNo",
          "sig",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "partnerKey": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "partnerRefNo": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "partnerPassword": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "totalAmount": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ItemDetail"
            },
            "nullable": true
          },
          "timestamp": {
            "minLength": 1,
            "type": "string"
          },
          "sig": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}